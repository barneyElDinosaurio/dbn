set mygray 40forever{   paper <mouse 3>   same? <mouse 3> 100   {      // set the color of the line      set index (<mouse 2> + 300)      set <net index> mygray      // set the length of the line      set index (index + 200)      set <net index> <mouse 1>   }   repeat y 0 100   {      set index (<mouse 2> + 300)      pen <net index>      set index (index + 200)      line 0 y <net index> y   }}