set px <mouse 1>set py <mouse 2>set rotate 0set radius 10set curx 0set cury 0command moveto mx my{    set curx mx    set cury my}command lineto mx my{    line curx cury mx my    set curx mx    set cury my}command diamond x y w h{    //set w (w/2)    //set h (h/2)    moveto (x-w) y     lineto x (y-h)    lineto (x+w) y    lineto x (y+h)    lineto (x-w) y}forever{   set x <mouse 1>   set y <mouse 2>   // left/right is rotation   // up/down is size   set dx (x - px)   set dy (y - py)   set px x   set py y   paper (dx*dy)   diamond x y dx dy}